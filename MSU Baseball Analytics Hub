    hit_model_data <- batter_report %>%
      filter(PitchCall == "InPlay") %>%
      select(PlayResult, ExitSpeed, Angle, Distance, Bearing, Date) %>%
      mutate(X = sin(Bearing * pi / 180) * Distance,
             Y = cos(Bearing * pi / 180) * Distance)
    
