    Season = case_when(
      (Date < '2023-02-17' | Date == '2023-02-28' | Date == '2023-03-01' | Date == '2023-03-23' | Date == '2023-04-27') ~ "2023 - SCRIMMAGES",
      (Date >= '2023-02-17' & Date <= '2023-08-01') ~ "2023 - SEASON",
