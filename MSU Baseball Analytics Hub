      geom_segment(aes(x = 0.7083,y = 0.3,xend = 0,yend = 0),size = 1,color = "black") +
      geom_segment(aes(x = 0.7083,y = 0.3,xend = 0.7083,yend = 0.5),size = 1,color = "black") +
