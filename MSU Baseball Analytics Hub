    atbats <- numeric(length(batter_report$PitchNo))
    atbat <- 0
    for (i in seq_along(batter_report$PitchNo)) {
      if (batter_report$PitchofPA[i] == 1) {
        atbat <- atbat + 1
      }
      atbats[i] <- atbat
    }
    batter_report$AtBat <- atbats
    
