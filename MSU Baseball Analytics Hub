  output$pitch_location_plot <- renderPlot({
    dataFilter <- reactive({
      master %>%
        {
          if (input$SeasonInput_pitcher == 'ALL')
            filter(., Season != "1855")
          
          else if (input$SeasonInput_pitcher == '2023 - ALL')
            filter(., Year == "2023")
          
          else if (input$SeasonInput_pitcher == '2024 - ALL')
            filter(., Year == "2024")
          
